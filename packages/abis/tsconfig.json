{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": ["dist/**/*.ts"],
  "exclude": []
}
